{
	"name": "milligram.github.io",
	"version": "1.3.0",
	"description": "Milligram website",
	"homepage": "https://milligram.io",
	"repository": "milligram/milligram.github.io",
	"license": "MIT",
	"author": "CJ Patoilo <cjpatoilo@gmail.com>",
	"private": "true",
	"engines": {
		"node": ">=4"
	},
	"dependencies": {
		"milligram": "latest"
	},
	"devDependencies": {
		"backstopjs": "^3.0.31",
		"browser-sync": "^2.18.1",
		"cname": "^0.0.2",
		"copycopy": "0.0.2",
		"csscompile": "^0.2.0",
		"editorconfig-tools": "^0.1.1",
		"eslint": "^4.9.0",
		"eslint-config-styled": "0.0.2",
		"gh-pages": "^1.0.0",
		"htmlcompile": "^0.3.0",
		"husky": "^0.14.3",
		"imgcompile": "^0.0.0",
		"jscompile": "^0.0.2",
		"npm-run-all": "^4.1.1",
		"onchange": "^3.0.2",
		"opn-cli": "^3.1.0",
		"plato": "^1.7.0",
		"rimraf": "^2.5.4",
		"sass-lint": "^1.10.2",
		"sw-precache": "^5.2.0"
	},
	"scripts": {
		"start": "run-s build watch",
		"build": "run-s clean && run-p build:misc build:fonts build:templates build:styles build:scripts build:images",
		"build:misc": "cname dist",
		"build:fonts": "copycopy src/fonts dist",
		"build:templates": "htmlcompile src dist && rimraf dist/templates && rimraf dist/layout.html",
		"build:styles": "csscompile src/styles dist/styles",
		"build:scripts": "jscompile src/scripts dist/scripts",
		"build:images": "imgcompile src/images dist/images",
		"watch": "run-p watch:templates watch:styles watch:scripts watch:images server",
		"watch:fonts": "onchange 'src/fonts' -- run-p build:fonts",
		"watch:templates": "onchange 'src/**/*.{pug,jade,ejs,haml,hbs,hogan,html}' -- run-p build:templates",
		"watch:styles": "onchange 'src/styles' -- run-p build:styles",
		"watch:scripts": "onchange 'src/scripts' -- run-p build:scripts",
		"watch:images": "onchange 'src/images' -- run-p build:images",
		"lint": "run-p lint:scripts lint:styles lint:config",
		"lint:styles": "sass-lint -c .sasslintrc src/styles/*.sass --verbose --no-exit",
		"lint:scripts": "eslint . --ignore-path .gitignore",
		"lint:config": "editorconfig-tools check .",
		"test": "run-p build",
		"complexity": "run-p complexity:styles complexity:scripts",
		"complexity:styles": "opn http://www.cssstats.com/stats?url=http://localhost:3000",
		"complexity:scripts": "plato -r -d test/complexity -e .eslintrc -x .json src/**/*.js && opn test/complexity/index.html",
		"compare": "backstop test --configPath=backstop.conf.js",
		"reference": "backstop reference --configPath=backstop.conf.js",
		"clean": "rimraf dist",
		"server": "browser-sync --no-notify start -s dist -f dist",
		"publish": "copycopy src/manifest.json dist && sw-precache --verbose --config sw-precache.config.js && gh-pages -d dist -b master",
		"prepush": "run-s build publish",
		"precommit": "run-p lint"
	}
}

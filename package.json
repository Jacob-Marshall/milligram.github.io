{
	"name": "milligram.github.io",
	"version": "1.2.0",
	"description": "Milligram website",
	"homepage": "https://milligram.github.io",
	"repository": "milligram/milligram.github.io",
	"license": "MIT",
	"author": "CJ Patoilo <cjpatoilo@gmail.com>",
	"private": "true",
	"engines": {
		"node": "^7.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.18.0",
		"babel-polyfill": "^6.16.0",
		"babel-preset-es2015": "^6.18.0",
		"babel-preset-stage-0": "^6.16.0",
		"backstopjs": "^2.3.3",
		"bower": "^1.8.0",
		"browser-sync": "^2.18.2",
		"cssnano-cli": "^1.0.5",
		"eslint": "^3.10.2",
		"eslint-config-standard": "^6.2.1",
		"eslint-plugin-promise": "^2.0.1",
		"eslint-plugin-standard": "^2.0.1",
		"gh-pages": "^0.11.0",
		"gulp": "^3.9.1",
		"html-minifier-cli": "^0.1.0",
		"html-validator-cli": "^3.0.4",
		"husky": "^0.11.9",
		"imagemin-cli": "^3.0.0",
		"node-sass": "^3.13.0",
		"npm-check": "^5.4.0",
		"npm-run-all": "^3.1.1",
		"onchange": "^3.0.2",
		"opn-cli": "^3.1.0",
		"plato": "^1.7.0",
		"pug-cli": "^1.0.0-alpha6",
		"sass-lint": "^1.10.2",
		"sitespeed.io": "^3.11.8",
		"svg-sprite-generator": "0.0.7",
		"svgo": "^0.6.6",
		"uglify-js": "^2.7.4"
	},
	"scripts": {
		"postinstall": "bower install",
		"prestart": "npm install",
		"pretest": "npm install",
		"prepush": "run-s gh-pages",
		"gh-pages": "gh-pages -d dist -b gh-pages",
		"plato": "plato -r -d test/complexity -e .eslintrc -t 'Code Complexity Tool' -x .json src/scripts/*.js && opn test/complexity/index.html",
		"sitespeedio": "sitespeed.io -u https://milligram.github.io -r test/perf --suppressDomainFolder --wptKey b277bb7109e15b600dafaf973f498dc1",
		"reference": "backstop reference --configPath=backstop.conf.js",
		"compare": "backstop test --configPath=backstop.conf.js",
		"clean": "rm -rf dist && mkdir dist",
		"fonts": "cp -rf src/fonts dist",
		"pug": "pug src -o dist",
		"validator": "html-validator --file=dist/index.html --verbose --format=gnu",
		"sass": "node-sass --output-style compressed -o node_modules/.cssnano-cache src/styles",
		"cssnano": "mkdir -p dist/styles && cssnano node_modules/.cssnano-cache/* dist/styles/main.min.css && rm -rf node_modules/.cssnano-cache",
		"sass-lint": "sass-lint -c .sasslintrc src/styles/*.sass --verbose --no-exit",
		"babel": "babel -p -d node_modules/.babel-cache src/scripts",
		"uglify": "mkdir -p dist/scripts && uglifyjs node_modules/.babel-cache/*.js -m -c -o dist/scripts/main.min.js && rm -rf node_modules/.babel-cache",
		"eslint": "eslint -c .eslintrc src/scripts",
		"imagemin": "imagemin src/images/* -o dist/images",
		"svgo": "svgo -f src/images/icons && mkdir -p dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
		"serve": "browser-sync --no-notify start -s dist -f dist",
		"build:misc": "cp -rf src/*.json dist && echo milligram.github.io > dist/CNAME",
		"build:fonts": "run-s fonts",
		"build:templates": "run-s pug validator",
		"build:styles": "run-s sass-lint sass cssnano",
		"build:scripts": "run-s eslint babel uglify",
		"build:images": "run-s imagemin svgo",
		"build:vendors": "cp -rf bower_components dist",
		"build": "run-s clean build:misc build:fonts build:templates build:styles build:scripts build:images build:vendors",
		"watch:fonts": "onchange 'src/fonts' -- npm run build:fonts",
		"watch:templates": "onchange 'src/**/*.pug' -- npm run build:templates",
		"watch:styles": "onchange 'src/styles' -- npm run build:styles",
		"watch:scripts": "onchange 'src/scripts' -- npm run build:scripts",
		"watch:images": "onchange 'src/images' -- npm run build:images",
		"watch:vendors": "onchange 'bower_components' -- npm run build:vendors",
		"watch": "run-p watch:templates watch:styles watch:scripts watch:images watch:vendors serve",
		"start": "run-s build watch",
		"test:npm": "npm-check -u",
		"test:complexity": "run-s plato",
		"test:perf": "run-s sitespeedio",
		"test:regression": "run-p serve compare",
		"test:build": "run-s build",
		"test": "run-s test:build"
	}
}
